@{
    ViewData["Title"] = "Home Page";
}
@{ 
    if (Request.QueryString["result"] != null)
    {
        Response.Write("<SCRIPT LANGUAGE=JavaScript>alert(\""+Request.QueryString["result"]+"\")</SCRIPT>");
    }
}
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src=~/Resources/Banner1.png alt="Performances" class="img-responsive" />
            <div class="carousel-caption">
                <p>
                    Узнавай о предстоящих событиях первым
                </p>
            </div>
        </div>
        <div class="item">
            <img src=~/Resources/Banner2.png alt="Tickets" class="img-responsive" />
            <div class="carousel-caption">
                <p>
                    Покупай билеты там, где тебе удобно.
                    @Html.ActionLink("Купить", "Index", "Catalogue", null,htmlAttributes:new {@class= "btn btn-default btn-default" })
                </p>
            </div>
        </div>
        <div class="item">
            <img src=~/Resources/Banner3.png alt="QR" class="img-responsive" />
            <div class="carousel-caption">
                <p style="color:goldenrod">
                    Используй QR-код вместо бумажных билетов.
                </p>
            </div>
        </div>
        <div class="item">
            <img src=~/Resources/Banner4.png alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption">
                <p>
                   
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-3">
    </div>
</div>
