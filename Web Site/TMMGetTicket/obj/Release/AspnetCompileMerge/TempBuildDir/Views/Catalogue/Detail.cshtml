@model TMMGetTicket.Models.Performance
@{
    ViewBag.Title = "Detail";
}

<h3>@ViewData["Message"]</h3>


<table class="table-bordered" style="width:50%">
    <tr>
        <td>
            <b>@Model.Name</b><br />
            @{
                string src = (Model.Image != null) ?
                    "data:image/jpeg;base64," + Convert.ToBase64String(Model.Image.Image) :
                    "";
            }
            @if (src == "")
            {
                <img style="width:200px;height:300px" src=~/Resources/NoPhoto.png ) />
            }
            else
            {
                <img style="width:200px;height:300px" src="@src" ) />
            }
        </td>
        <td>
            <br />
            Место проведения:@Model.Place<br />
            Дата проведения:@Model.BeginingDateTime<br />
            @{
                int count = Model.TicketCount - Model.FacticalCount;
            }
            Билетов осталось:@count<br />
        </td>
        <td>
            <text>
                @Model.Details
            </text>
        </td>
    </tr>
</table>
    @Html.ActionLink("Купить билет", "Buy", "Catalogue", new { @id = Model.Id }, htmlAttributes: new { @class = "btn btn-default btn-default" })